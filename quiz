<input type="button"value="Grade Me"onClick="getScore(this.form);">

<input type="reset" value="Clear"><p>

Score out of 10 = <input type= text size 15 name= "mark">

Score as a percentage = <input type=text size=15 name="percentage"><br>

</form>

<br> Created by Gavin Vincenti <br>

<p>

<form method="post" name="Form" onsubmit="" action="">

</form>

</body>

<script>

var numofQues = 10;

var numofChoi = 4;

var answers = new Array(10);

answers[0] = "Mona Lisa";

answers[1] = "Brazil";

answers[2] = "Agra";

answers[3] = "France";

answers[4] = "South Dakota";

answers[5] = "Easter Island";

answers[6] = "Peru";

answers[7] = "Falkirk";

answers[8] = "Russia";

answers[9] = "Barcelona";




function getScore(form) {

var score = 0;

var currentElement;

var currentSelection;

for (i=0; i<numofQues; i++) {

currentElement = i*numofChoi;

answered=false;

for (j=0; j<numofChoi; j++) {

currentSelection = form.elements[currentElement + j];

if (currentSelection.checked) {

answered=true;

if (currentSelection.value == answers[i]) {

score++;

break;

}

}

}

if (answered ===false){alert("Please answer all of the questions") ;return false;}

}

var scorepercentage = Math.round(score/numofQues*100);

form.percentage.value = scorepercentage + "%";

form.mark.value=score;

}

</script>

